#!/bin/bash

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
height_dm=$(jq -r '.height' data.json)
weight_hg=$(jq -r '.weight' data.json)

# Convert to meters and kg (remove trailing zeros)
formatted_height=$(awk "BEGIN { printf(\"%.1f\", $height_dm / 10) }" | sed 's/\.0$//')
formatted_weight=$(awk "BEGIN { printf(\"%.1f\", $weight_hg / 10) }" | sed 's/\.0$//')

# Output in the exact expected format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
